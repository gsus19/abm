	public List<Personas> listaDePersonas() {
		Dbconn dbSingleton = Dbconn.getInstance();
   	 	Database db = dbSingleton.testDatabase();
   	 	
		 List<Personas> list = db.findByIndex("\"selector\": { \"_id\": { \"$gt\": 0} }",Personas.class);
		 return list;

	}		

